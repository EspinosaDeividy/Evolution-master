@{
    ViewBag.Title = "Transportadoras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/Scripts/App/CrudTransportadorasApp.js"></script>
}

@section styles{
    <style>
        body {
            margin: 50px;
        }
    </style>
}

<section id="conteudo" class="container">

    <div class="form-horizontal">
        <h4>Transportadoras</h4>
        <hr />
        <section id="formulario">

            <form action="/" method="post" id="formDados">

                <input type="hidden" name="TransportadoraID" id="TransportadoraID" />

                <div class="form-group">
                    <label class="control-label col-md-2" for="NomeRazaoSocial">Nome/Razão Social</label>
                    <div class="col-md-10">
                        <input type="text" id="NomeRazaoSocial" class="form-control" name="NomeRazaoSocial" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Endereco">Endereço</label>
                    <div class="col-md-10">
                        <input type="text" id="Endereco" class="form-control" name="Endereco" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="numero">Número</label>
                    <div class="col-md-10">
                        <input type="number" id="numero" class="form-control" name="numero" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Bairro">Bairro</label>
                    <div class="col-md-10">
                        <input type="text" id="Bairro" class="form-control" name="Bairro" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Cidade">Cidade</label>
                    <div class="col-md-10">
                        <input type="text" id="Cidade" class="form-control" name="Cidade" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Cidade">Estado</label>
                    <div class="col-md-10">
                        <input type="text" id="Estado" class="form-control" name="Estado" />
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-2" for="Usuario">Usuário</label>
                    <div class="col-md-10">
                        @Html.DropDownList("UsuarioID", (IEnumerable<SelectListItem>) ViewBag.PriorityID, "Selecione", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Classificação">Classificação</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ClassificacaoID", (IEnumerable<SelectListItem>) ViewBag.PriorityID, "Selecione", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" id="salvar" value="Salvar" class="btn btn-success" onclick="Cadastrar()" />
                        <input type="button" id="atualizar" value="Atualizar" class="btn btn-info hidden" onclick="Atualizar()" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</section>

<section id="listagem">
    <table class="table hidden" id="tabela">
        <thead>
            <tr>
                <th>Cód. Transportadora</th>
                <th>Nome/Razão Social</th>
                <th>Endereço</th>
                <th>Número</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>UsuarioID</th>
                <th>ClassificacaoID</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tbody"></tbody>
    </table>
</section>